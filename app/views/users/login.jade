extends ../layouts/default

block main
  .container
    .form-signin
      if message != ""
        .alert.alert-danger.animated.fadeIn
          button.close(type='button', data-dismiss='alert') Ã—
          div= message

      form.form-signin(action="/users/session", method="post", role="form")
        input(type='hidden', name='_csrf', value="#{csrf_token}")
        .list-group
          .list-group-item
            input.form-control.no-border(type='text', autocomplete="off" placeholder='Email', name="email")
          .list-group-item
            input.form-control.no-border(type='password', placeholder='Password', name="password")

        button.btn.btn-lg.btn-primary.btn-block.btn-login(type='submit') Sign in

        a.btn.btn-lg.btn-dark.btn-block(href="forgot-password" class="forgot-password") Forgot Password


        div.clearfix

        p.line.line-dashed

        p.text-muted.text-center
          small Do not have an account?
        a.btn.btn-lg.btn-default.btn-block(href='/signup') Create an account
